{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "OpenClaw Secure Installer",
  "version": "0.1.0",
  "identifier": "ai.openclaw.secureinstaller",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenClaw Secure Installer",
        "width": 1024,
        "height": 720,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "publisher": "OpenClaw AI",
    "shortDescription": "Install and manage the OpenClaw Gateway via Docker",
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": ""
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
